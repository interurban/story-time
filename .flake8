[flake8]
# Basic flake8 configuration with recommended rules
max-line-length = 88
max-complexity = 10
ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401